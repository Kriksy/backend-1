<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Diary</title>
    </head>

    <body>
        <h1>Diary</h1>
        <% entries.forEach(entry => { %>
            <h2><%= entry.title %></h2>
            <p><%= entry.date %></p>
            <p><%= entry.content %></p>
        <% }) %>
        <form method="POST" action="/posts">
            Title:
            <input type="text" name="title" /><br/>
            Content:<br/>
            <textarea name="content"></textarea><br/>
            <input type="submit" value="OK" />
        </form>
    </body>
</html>