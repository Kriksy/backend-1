<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Heroes</title>
    </head>

    <body>
        <h1>Heroes</h1>
        <ul>
            <% heroes.forEach(hero => { %>
                <li>
                    <a href="/heroes/<%= hero._id %>">
                        <%= hero.name %>
                    </a>
                </li>
            <% }) %>
        </ul>
    </body>
</html>