<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Heroes</title>
    </head>

    <body>
        <h1>Heroes</h1>
        <ul>
            <% heroes.forEach(hero => {%>
                <li>
                    <a href="/heroes/<%= hero.id %>">
                        <%= hero.name %>
                    </a>
                </li>
            <% }) %>
        </ul>
        <form method="POST" action="/heroes">
            Name: <input type="text" name="name" /><br/>
            Age: <input type="number" name="age" /><br/>
            <input type="submit" value="Save" />
        </form>
    </body>
</html>