<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title><%= loc.name %></title>
    </head>

    <body>
        <h1><%= loc.name %></h1>
        <p><%= loc.name %> is located in <%= loc.region %></p>
        <ul>
            <% heroes.forEach(hero => { %>
                <li>
                    <a href="/heroes/<%= hero.id %>">
                        <%= hero.name %>
                    </a>
                </li>
            <% }) %>
        </ul>
    </body>
</html>

