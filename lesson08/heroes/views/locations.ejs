<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <title>Locations</title>
    </head>

    <body>
        <h1>Locations</h1>
        <ul>
            <% locations.forEach(location => { %>
                <li>
                    <a href="/locations/<%= location.id %>">
                        <%= location.name %>
                    </a>
                </li>
            <% }) %>
        </ul>
        <form method="POST">
            Name: <input type="text" name="name"><br>
            Region: <input type="text" name="region"><br>
            <input values="Save" type="submit">
        </form>
    </body>
</html>
